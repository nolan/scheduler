<h1>New stop</h1>

<% form_for(@stop) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :schedule_id %><br />
    <%= f.text_field :schedule_id %>
  </p>
  <p>
    <%= f.label :game_id %><br />
    <%= f.text_field :game_id %>
  </p>
  <p>
    <%= f.label :distance %><br />
    <%= f.text_field :distance %>
  </p>
  <p>
    <%= f.label :sights %><br />
    <%= f.text_field :sights %>
  </p>
  <p>
    <%= f.label :people %><br />
    <%= f.text_field :people %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', stops_path %>
