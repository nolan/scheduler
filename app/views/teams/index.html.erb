<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Stadium</th>
    <th>Capacity</th>
    <th>Address 1</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
  </tr>

<% for team in @teams %>
  <tr>
    <td><%=h team.name %></td>
    <td><%=h team.stadium %></td>
    <td><%=h team.capacity %></td>
    <td><%=h team.address_1 %></td>
    <td><%=h team.city %></td>
    <td><%=h team.state %></td>
    <td><%=h team.zip %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

